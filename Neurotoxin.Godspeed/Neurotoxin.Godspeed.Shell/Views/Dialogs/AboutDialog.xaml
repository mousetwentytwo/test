<primitives:DialogBase x:Class="Neurotoxin.Godspeed.Shell.Views.Dialogs.AboutDialog"
                       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:primitives="clr-namespace:Neurotoxin.Godspeed.Shell.Primitives"
                       Width="400" WindowStartupLocation="CenterOwner">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Margin="5,0,0,15" TextWrapping="Wrap" x:Name="Description"/>

        <Button Grid.Row="1" Content="Close" Width="75" x:Name="Ok" Click="OkButtonClick"/>

    </Grid>
</primitives:DialogBase>