<controls:DialogBase x:Class="Neurotoxin.Godspeed.Shell.Views.Dialogs.NewVersionDialog"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:controls="clr-namespace:Neurotoxin.Godspeed.Presentation.Controls;assembly=Neurotoxin.Godspeed.Presentation"
                           Width="400" Topmost="True" SizeToContent="Height" WindowStartupLocation="CenterOwner"
                           Style="{StaticResource Dialog}" Title="New version available">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="4" Grid.Row="0" Margin="5,0,0,5" x:Name="Message" TextWrapping="Wrap" />

        <Button Grid.Column="1" Grid.Row="1" Content="Download" Margin="5" x:Name="Download" Click="DownloadButtonClick" Width="80"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Cancel" Margin="5" x:Name="Cancel" Click="CancelButtonClick" Width="80"/>
        
    </Grid>
</controls:DialogBase>