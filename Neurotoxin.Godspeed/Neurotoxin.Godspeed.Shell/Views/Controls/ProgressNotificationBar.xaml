<UserControl x:Class="Neurotoxin.Godspeed.Shell.Views.Controls.ProgressNotificationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">
    <Border Background="#f4f4f4" BorderBrush="LightGray" BorderThickness="0,1,1,0" SnapsToDevicePixels="True"
                CornerRadius="0,3,0,0" Height="Auto" Width="Auto" MinWidth="200" Visibility="{Binding IsBusy, Converter={StaticResource BoolToVis}}" Margin="1,0,0,1">
        <TextBlock Text="{Binding ProgressMessage}" Foreground="#a0a0a0" Margin="2,1,3,1"/>
    </Border>
</UserControl>
