<UserControl x:Class="Neurotoxin.Godspeed.Presentation.Controls.Rollover"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cc="clr-namespace:Neurotoxin.Godspeed.Presentation.Controls">
    <Grid Grid.ColumnSpan="2" Grid.RowSpan="3">
        <Rectangle Fill="#d2e6fa" Opacity="0.5"/>
        <Grid Width="Auto" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Rectangle RadiusX="3" RadiusY="3" Fill="White"/>
            <StackPanel Orientation="Horizontal" Margin="3">
                <cc:ProgressIndicator x:Name="ProgressIndicator" VerticalAlignment="Center"/>
                <StackPanel x:Name="Messages" VerticalAlignment="Center">
                    
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
